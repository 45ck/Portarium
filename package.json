{
  "name": "portarium",
  "private": false,
  "type": "module",
  "version": "0.1.0",
  "description": "Portarium -- open-source multi-tenant control plane for governable business operations (VAOP architecture)",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "prepare": "husky",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "typecheck:slow": "tsc -p tsconfig.json --noEmit --skipLibCheck false",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "spell": "cspell --no-progress --config cspell.json \"{src,docs,.specify}/**/*\"",
    "knip": "knip --production",
    "knip:strict": "knip --strict",
    "depcruise": "depcruise --validate --output-type err src",
    "depgraph:mermaid": "depcruise --output-type mermaid src --output-to reports/architecture/dependency-graph.mmd",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "mutation": "stryker run",
    "ci:pr": "npm run typecheck && npm run lint && npm run format:check && npm run spell && npm run depcruise && npm run knip && npm run test:coverage",
    "ci:nightly": "npm run ci:pr && npm run mutation && npm run depgraph:mermaid && npm run typecheck:slow && npm run knip:strict"
  },
  "lint-staged": {
    "*.{ts,tsx,js,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,mdx,json,yml,yaml}": [
      "prettier --write",
      "cspell --no-progress --config cspell.json"
    ]
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "eslint": "^10.0.0",
    "typescript-eslint": "^8.55.0",
    "@eslint/js": "^10.0.1",
    "globals": "^17.3.0",
    "prettier": "^3.8.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-sonarjs": "^3.0.7",
    "eslint-plugin-unicorn": "^63.0.0",
    "eslint-plugin-unused-imports": "^4.4.1",
    "eslint-plugin-n": "^17.23.2",
    "cspell": "^9.6.4",
    "dependency-cruiser": "^17.3.8",
    "knip": "^5.83.1",
    "vitest": "^4.0.18",
    "@vitest/coverage-v8": "^4.0.18",
    "@stryker-mutator/core": "^9.4.0",
    "@stryker-mutator/vitest-runner": "^9.4.0",
    "@stryker-mutator/typescript-checker": "^9.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "tsx": "^4.21.0"
  }
}
