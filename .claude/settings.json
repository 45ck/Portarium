{
  "permissions": {
    "defaultMode": "plan",
    "allow": [
      "Read(**)",
      "Grep(**)",
      "Glob(**)",
      "Bash(npm ci)",
      "Bash(npm run *)",
      "Bash(node *)",
      "Bash(git status)",
      "Bash(git diff *)"
    ],
    "deny": ["Read(**/.env*)", "Read(**/*secret*)", "Bash(git commit --no-verify*)"]
  }
}
