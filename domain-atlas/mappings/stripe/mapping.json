{
  "schemaVersion": "1.0.0",
  "providerId": "stripe",
  "portFamily": "PaymentsBilling",
  "mappings": [
    {
      "canonicalObject": "Party",
      "vendorEntity": "Customer",
      "fieldMappings": {
        "displayName": "name",
        "email": "email"
      },
      "notes": "Stripe Customer maps to Party with role tags applied by the adapter."
    },
    {
      "canonicalObject": "Invoice",
      "vendorEntity": "Invoice",
      "fieldMappings": {
        "currency": "currency",
        "total": "total",
        "partyRef": "customer"
      }
    },
    {
      "canonicalObject": "Payment",
      "vendorEntity": "PaymentIntent",
      "fieldMappings": {
        "amount": "amount",
        "currency": "currency",
        "status": "status",
        "partyRef": "customer"
      },
      "notes": "Some Stripe integrations map Payment to Charge instead; keep mapping explicit and versioned."
    },
    {
      "canonicalObject": "Subscription",
      "vendorEntity": "Subscription",
      "fieldMappings": {
        "status": "status",
        "partyRef": "customer"
      }
    },
    {
      "canonicalObject": "Product",
      "vendorEntity": "Product",
      "fieldMappings": {
        "name": "name"
      }
    }
  ]
}
