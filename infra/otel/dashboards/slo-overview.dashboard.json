{
  "__inputs": [],
  "__requires": [
    { "type": "grafana", "id": "grafana", "name": "Grafana", "version": "10.0.0" },
    { "type": "datasource", "id": "prometheus", "name": "Prometheus", "version": "1.0.0" }
  ],
  "annotations": { "list": [] },
  "description": "Portarium SLO Overview — error budget burn rates and remaining budget for all P0/P1 SLOs",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "id": 1,
      "title": "API — Control Plane",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 0.1 },
              { "color": "green", "value": 0.25 }
            ]
          },
          "unit": "percentunit",
          "min": 0,
          "max": 1
        },
        "overrides": []
      },
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 1 },
      "id": 2,
      "options": {
        "orientation": "auto",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "title": "API Availability — Budget Remaining",
      "type": "gauge",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "slo:api_availability:error_budget_remaining",
          "legendFormat": "Budget remaining",
          "refId": "A"
        }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": { "unit": "short", "color": { "mode": "palette-classic" } },
        "overrides": []
      },
      "gridPos": { "h": 4, "w": 9, "x": 6, "y": 1 },
      "id": 3,
      "options": {
        "legend": { "calcs": [], "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "single" }
      },
      "title": "API Availability — Burn Rate (1h)",
      "type": "timeseries",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "slo:api_availability:error_rate1h / (1 - 0.999)",
          "legendFormat": "Burn rate (1h)",
          "refId": "A"
        },
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "vector(14)",
          "legendFormat": "Page threshold (14×)",
          "refId": "B"
        },
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "vector(6)",
          "legendFormat": "Ticket threshold (6×)",
          "refId": "C"
        }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": { "unit": "percentunit", "color": { "mode": "palette-classic" } },
        "overrides": []
      },
      "gridPos": { "h": 4, "w": 9, "x": 15, "y": 1 },
      "id": 4,
      "title": "API Latency p95 — Error Rate (1h)",
      "type": "timeseries",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "slo:api_latency_p95:error_rate1h",
          "legendFormat": "Error rate (1h)",
          "refId": "A"
        }
      ]
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 5 },
      "id": 10,
      "title": "Execution Plane — Workflows",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 0.1 },
              { "color": "green", "value": 0.25 }
            ]
          },
          "unit": "percentunit",
          "min": 0,
          "max": 1
        },
        "overrides": []
      },
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 6 },
      "id": 11,
      "options": {
        "orientation": "auto",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "title": "Workflow Completion — Budget Remaining",
      "type": "gauge",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "slo:workflow_completion_rate:error_budget_remaining",
          "legendFormat": "Budget remaining",
          "refId": "A"
        }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": { "unit": "short", "color": { "mode": "palette-classic" } },
        "overrides": []
      },
      "gridPos": { "h": 4, "w": 9, "x": 6, "y": 6 },
      "id": 12,
      "title": "Workflow Completion — Burn Rate (1h)",
      "type": "timeseries",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "slo:workflow_completion_rate:error_rate1h / (1 - 0.99)",
          "legendFormat": "Burn rate (1h)",
          "refId": "A"
        },
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "vector(14)",
          "legendFormat": "Page threshold (14×)",
          "refId": "B"
        }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": { "unit": "percentunit", "color": { "mode": "palette-classic" } },
        "overrides": []
      },
      "gridPos": { "h": 4, "w": 9, "x": 15, "y": 6 },
      "id": 13,
      "title": "Worker Action Success — Error Rate (1h)",
      "type": "timeseries",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "slo:worker_action_success_rate:error_rate1h",
          "legendFormat": "Error rate (1h)",
          "refId": "A"
        }
      ]
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 10 },
      "id": 20,
      "title": "Evidence Store Integrity",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 0.10 },
              { "color": "green", "value": 0.25 }
            ]
          },
          "unit": "percentunit",
          "min": 0,
          "max": 1
        },
        "overrides": []
      },
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 11 },
      "id": 21,
      "options": {
        "orientation": "auto",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "title": "Evidence Integrity — Budget Remaining",
      "type": "gauge",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "slo:evidence_integrity_write_success:error_budget_remaining",
          "legendFormat": "Budget remaining",
          "refId": "A"
        }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": { "unit": "short", "color": { "mode": "palette-classic" } },
        "overrides": []
      },
      "gridPos": { "h": 4, "w": 18, "x": 6, "y": 11 },
      "id": 22,
      "title": "Evidence Integrity — Write Success Rate (5m)",
      "type": "timeseries",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "sum(rate(portarium_evidence_write_succeeded_total[5m])) / sum(rate(portarium_evidence_write_attempted_total[5m]))",
          "legendFormat": "Write success rate",
          "refId": "A"
        },
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "vector(0.9999)",
          "legendFormat": "SLO target (99.99%)",
          "refId": "B"
        }
      ]
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 15 },
      "id": 30,
      "title": "Error Budget Summary (30-day rolling)",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "percentage",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 10 },
              { "color": "green", "value": 25 }
            ]
          },
          "unit": "percentunit"
        },
        "overrides": []
      },
      "gridPos": { "h": 6, "w": 24, "x": 0, "y": 16 },
      "id": 31,
      "options": {
        "displayMode": "gradient",
        "orientation": "horizontal",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "showUnfilled": true
      },
      "title": "Error Budget Remaining — All SLOs",
      "type": "bargauge",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "slo:api_availability:error_budget_remaining",
          "legendFormat": "API Availability (99.9%)",
          "refId": "A"
        },
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "slo:api_latency_p95:error_budget_remaining",
          "legendFormat": "API Latency p95 (95%)",
          "refId": "B"
        },
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "slo:workflow_completion_rate:error_budget_remaining",
          "legendFormat": "Workflow Completion (99%)",
          "refId": "C"
        },
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "slo:workflow_latency_p90:error_budget_remaining",
          "legendFormat": "Workflow Latency p90 (90%)",
          "refId": "D"
        },
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "slo:worker_action_success_rate:error_budget_remaining",
          "legendFormat": "Worker Action Success (99.5%)",
          "refId": "E"
        },
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "slo:evidence_integrity_write_success:error_budget_remaining",
          "legendFormat": "Evidence Integrity (99.99%)",
          "refId": "F"
        }
      ]
    }
  ],
  "refresh": "1m",
  "schemaVersion": 38,
  "tags": ["portarium", "slo", "observability"],
  "templating": {
    "list": [
      {
        "current": {},
        "hide": 0,
        "includeAll": false,
        "label": "Datasource",
        "name": "datasource",
        "options": [],
        "query": "prometheus",
        "refresh": 1,
        "type": "datasource"
      }
    ]
  },
  "time": { "from": "now-24h", "to": "now" },
  "timepicker": {},
  "timezone": "UTC",
  "title": "Portarium — SLO Overview",
  "uid": "portarium-slo-overview",
  "version": 1
}
